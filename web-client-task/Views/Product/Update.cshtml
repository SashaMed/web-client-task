@using web_client_task.ViewModels.Products
@model ProductUpdateViewModel
@{
	ViewData["Title"] = "Product update";
}

<h1>Update product</h1>

<hr />
<div class="row">
    <div class="col-6 col-lg-5">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <p>


            </p>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" value="@Model.Description" class="form-control" rows="3" />@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <p>


            </p>
            <div class="form-group">
                <label asp-for="DefaultQuantity" class="control-label"></label>
                <input asp-for="DefaultQuantity" class="form-control" value="@Model.DefaultQuantity" />
                <span asp-validation-for="DefaultQuantity" class="text-danger"></span>
            </div>
            <p>


            </p>

            <div class="form-group">
                <input type="submit" value="Update" class="w-100 btn btn-lg btn-primary" />
            </div>

        </form>
    </div>
</div>