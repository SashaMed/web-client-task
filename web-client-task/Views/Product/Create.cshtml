@using web_client_task.ViewModels.Products
@model ProductCreateViewModel

@{
	ViewData["Title"] = "Create product";
}

<h1>Create product</h1>

<hr />
<div class="row">
    <div class="col-6 col-lg-5">
        <form method="post" asp-controller="Product" asp-action="Create" asp-route-fridgeId="@Model.FridgeId" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <p>


            </p>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" placeholder="Description" class="form-control" rows="3" />@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <p>


            </p>
            <div class="form-group">
                <label asp-for="DefaultQuantity" class="control-label"></label>
                <input asp-for="DefaultQuantity" class="form-control" />
                <span asp-validation-for="DefaultQuantity" class="text-danger"></span>
            </div>
            <p>


            </p>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <p>


            </p>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control form-control-lg" placeholder="Image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <p>


            </p>
            <div class="form-group">
                <input type="submit" value="Create" class="w-100 btn btn-lg btn-primary" />
            </div>

        </form>
    </div>
</div>